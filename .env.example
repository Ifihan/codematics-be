# Application
APP_NAME=NotebookDeploy
APP_VERSION=4.0.0
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/notebookdeploy

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_BUCKET_NAME=your-bucket-name
GCP_ARTIFACT_REGISTRY=us-central1-docker.pkg.dev/project-id/repo-name

GCP_SERVICE_ACCOUNT_KEY=/path/to/service-account-key.json

# Gemini AI
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=8192

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

GITHUB_APP_ID=your-github-app-id
GITHUB_CLIENT_ID=your-github-app-client-id
GITHUB_CLIENT_SECRET=your-github-app-client-secret
GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/github/oauth/callback
GITHUB_WEBHOOK_SECRET=your-webhook-secret-min-16-chars
# GITHUB_PRIVATE_KEY_PATH=/path/to/private-key.pem